<?php
header('Content-Type: application/json');
include 'db.php';

$message = '';
$hostname = $_SERVER['NGINX_HOST'] ?? '';
$ip = $_SERVER['NGINX_IP'] ?? '';

$pdo = db();
$message = $pdo ? "Conectada" : "Desconectada";

echo json_encode([
    'hostname' => $hostname,
    'ip' => $ip,
    'db' => $message
]);

